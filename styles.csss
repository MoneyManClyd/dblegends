/* Global Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    color: #333;
    margin: 0;
    padding: 0;
}

header {
    background-color: #333;
    color: white;
    padding: 1rem;
    text-align: center;
}

header nav {
    margin-top: 1rem;
}

header nav a {
    color: white;
    margin: 0 15px;
    text-decoration: none;
}

#bot-stats {
    text-align: center;
    padding: 2rem;
}

button {
    background-color: #3a3a3a;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
}

button:hover {
    background-color: #555;
}

#about {
    text-align: center;
    padding: 2rem;
    background-color: #efefef;
}
